<div class="box_pop_add_content" style="width: 500px;">
    <div class="pop_title"><h5>Báo lỗi phim</h5><span id="close_pop_add"><i class="fa fa-close"></i></span></div>
    <div class="pop_content">
        <div class="list_input scroll">
            <div class="li_input">
                <div class="text">Gỗi gặp phải:</div>
                <div class="input">
                    <textarea name="loi" placeholder="Nhập lỗi bạn gặp phải"></textarea>
                </div>
            </div>
        </div>
        <div class="list_button">
            <input type="hidden" name="phim" value="{phim}">
            <input type="hidden" name="tap" value="{tap}">
            <button class="button_cancel"><i class="fa fa-ban"></i> Hủy</button>
            <button class="button_lichhen" id="gui_report"><i class="fa fa-save"></i> Gửi báo cáo</button>
        </div>
    </div>
</div>